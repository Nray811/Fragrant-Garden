@model IEnumerable<petsFragrant_Test.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="d-flex">
    @foreach (var item in Model)
    {
        <div class="card m-2" style="width: 18rem;">
            <img src="https://picsum.photos/200/200?random=1" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text text-danger">$@item.Price</p>
                <a href="#" class="btn btn-primary">購買</a>
            </div>
        </div>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.CategoryID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdcutId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProdcutId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProdcutId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
